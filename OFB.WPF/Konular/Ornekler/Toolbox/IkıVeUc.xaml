        <ListBox x:Name="listBox_Copy1" HorizontalAlignment="Left" Height="210" Margin="372,118,0,0" VerticalAlignment="Top" Width="124" Foreground="Silver" BorderBrush="{x:Null}" BorderThickness="0" Background="#FF222431"/>



    </Grid>
